@model DEPI_Library.Models.Book

@{
    ViewData["Title"] = "Create Book";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <img src="https://img.icons8.com/color/96/open-book--v2.png" alt="Add Book Icon" class="mb-3" />
        <h1 class="fw-bold text-primary">Add New Book</h1>
        <p class="text-muted">Fill out the details to add a new book to the library 📘</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" method="post" class="p-4 bg-white rounded-4 shadow-sm border">

                <div class="mb-4">
                    <label for="Title" class="form-label fw-semibold">📖 Book Title</label>
                    <input type="text" class="form-control form-control-lg" id="Title" name="Title" placeholder="Enter book title..." required />
                </div>

                <div class="mb-4">
                    <label for="Author" class="form-label fw-semibold">✍️ Author</label>
                    <input type="text" class="form-control form-control-lg" id="Author" name="Author" placeholder="Enter author name..." required />
                </div>

                <div class="mb-4">
                    <label for="CategoryId" class="form-label fw-semibold">📂 Category</label>
                    @Html.DropDownListFor(
                             model => model.CategoryId,
                             (IEnumerable<SelectListItem>)ViewBag.Categories,
                             "Select Category",
                             new { @class = "form-select form-select-lg", required = "required" }
                             )
                </div>

                <button type="submit" class="btn btn-success btn-lg w-100 rounded-pill shadow">
                    💾 Save Book
                </button>
            </form>
        </div>
    </div>
</div>

<style>
    input::placeholder {
        font-style: italic;
        color: #aaa;
    }

    form label {
        font-size: 1.1rem;
    }

    .form-control,
    .form-select {
        border-radius: 0.5rem;
    }

    .btn-success:hover {
        background-color: #198754;
        transform: scale(1.02);
    }
</style>
